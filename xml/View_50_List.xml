<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="SongListLayout">
        <control type="group">
            <animation type="Focus" reversible="false">
                <effect type="zoom" end="102,112" time="50" tween="sine" center="auto" />
                <effect type="zoom" end="98.04,89.3" time="150" tween="sine" delay="100" center="auto" />
            </animation>
            <control type="image">
                <visible>!$PARAM[Focused] | [!Control.HasFocus(50) + $PARAM[Focused]]</visible>
                <left>0</left>
                <top>0</top>
                <width>1656</width>
                <height>120</height>
                <texture border="32" colordiffuse="MenuItemBackground">masks/Button128x128b16r16-5x06.png</texture>
            </control>
            <control type="image">
                <visible>$PARAM[Focused] + Control.HasFocus(50)</visible>
                <left>0</left>
                <top>0</top>
                <width>1656</width>
                <height>120</height>
                <texture border="32" colordiffuse="Primary">masks/Button128x128b16r16-5x06.png</texture>
            </control>
            <control type="image">
                <visible>String.IsEqual(MusicPlayer.Title,ListItem.Title) + String.IsEqual(MusicPlayer.Album,ListItem.Album)</visible>
                <left>32</left>
                <top>32</top>
                <width>56</width>
                <height>56</height>
                <texture>general/EQ.gif</texture>
            </control>
            <control type="group">
                <visible>$PARAM[Focused]</visible>
                <control type="label">
                    <visible>!String.IsEqual(MusicPlayer.Title,ListItem.Title) | !String.IsEqual(MusicPlayer.Album,ListItem.Album)</visible>
                    <top>0</top>
                    <left>32</left>
                    <width>84</width>
                    <height>120</height>>
                    <font>ItemLabel</font>
                    <aligny>center</aligny>
                    <align>center</align>
                    <textcolor>TextDark</textcolor>
                    <label>$VAR[TrackNumberVar].</label>
                </control>
                <control type="label">
                    <top>0</top>
                    <left>126</left>
                    <right>240</right>
                    <height>120</height>>
                    <font>ItemLabelSecondary</font>
                    <aligny>center</aligny>
                    <textcolor>TextDark</textcolor>
                    <label>$VAR[ListMainLabelVar]</label>
                </control>
                <control type="label">
                    <top>0</top>
                    <left>116</left>
                    <right>64</right>
                    <height>120</height>>
                    <font>ItemLabelSecondary</font>
                    <aligny>center</aligny>
                    <align>right</align>
                    <textcolor>TextDark</textcolor>
                    <label>$VAR[TrackDurationMinutesVar]:$INFO[ListItem.Duration(ss)]</label>
                </control>
            </control>
            <control type="group">
                <visible>!$PARAM[Focused] | [!Control.HasFocus(50) + $PARAM[Focused]]</visible>
                <control type="label">
                    <visible>!String.IsEqual(MusicPlayer.Title,ListItem.Title) | !String.IsEqual(MusicPlayer.Album,ListItem.Album)</visible>
                    <top>0</top>
                    <left>32</left>
                    <width>84</width>
                    <height>120</height>>
                    <font>ItemLabel</font>
                    <aligny>center</aligny>
                    <align>center</align>
                    <textcolor>TextBright</textcolor>
                    <label>$VAR[TrackNumberVar].</label>
                </control>
                <control type="label">
                    <top>0</top>
                    <left>126</left>
                    <right>240</right>
                    <height>120</height>>
                    <font>ItemLabelSecondary</font>
                    <aligny>center</aligny>
                    <textcolor>TextBright</textcolor>
                    <label>$VAR[ListMainLabelVar]</label>
                </control>
                <control type="label">
                    <top>0</top>
                    <left>116</left>
                    <right>64</right>
                    <height>120</height>>
                    <font>ItemLabelSecondary</font>
                    <aligny>center</aligny>
                    <align>right</align>
                    <textcolor>TextBright</textcolor>
                    <label>$VAR[TrackDurationMinutesVar]:$INFO[ListItem.Duration(ss)]</label>
                </control>
            </control>
        </control>
    </include>


    <include name="View_50_List">
        <control type="group">
            <control type="group">

                <control type="list" id="50">
                    <visible>!$EXP[isPrimaryMedia]</visible>
                    <top>324</top>
                    <left>328</left>
                    <width>1656</width>
                    <bottom>0</bottom>
                    <onleft>61</onleft>
                    <onright>61</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <viewtype label="535">list</viewtype>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>

                    <itemlayout height="116" width="1656">
                        <include content="SongListLayout">
                            <param name="Focused" value="false" />
                            <param name="ItemColor" value="TextBright" />
                        </include>
                    </itemlayout>
                    <focusedlayout height="116" width="1656">
                        <include content="SongListLayout">
                            <param name="Focused" value="true" />
                            <param name="ItemColor" value="TextDark" />
                        </include>
                    </focusedlayout>

                </control>

                <control type="group">
                    <visible>Container.Content(songs)</visible>
                    <control type="label">
                        <top>72</top>
                        <left>344</left>
                        <right>66</right>>
