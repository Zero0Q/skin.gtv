<?xml version="1.0" encoding="UTF-8"?>

<includes>

    <!-- For you hub widgets -->
    <include name="ForYouHubWidgets">

        <control type="image">
            <top>0</top>
            <left>0</left>
            <height>2160</height>
            <width>3840</width>
            <texture background="true" colordiffuse="ff303030">general/screens/home2.png</texture>
        </control>

        <include content="VerticalDivider">
            <param name="value" value="490" />
        </include>

        <control type="grouplist" id="4000">
            <!-- <animation effect="slide" end="0,180" time="0" condition="!$EXP[subMenuIsEmpty]">Conditional</animation> -->
            <!-- <animation effect="slide" end="0,-180" time="200" condition="!Control.HasFocus(9000) + !Control.HasFocus(9001)">Conditional</animation> -->

            <!-- Allow slide for upto 6 widget rows -->
            <animation effect="slide" end="0,-600" time="200" condition="false">Conditional</animation> <!-- Do if no master widget -->

            <animation effect="slide" end="0,-1400" time="200" condition="Integer.IsGreater(Container(4000).Position,1) + true">Conditional</animation> <!-- Do if master widget = true -->
            <animation effect="slide" end="0,-600" time="200" condition="Integer.IsGreater(Container(4000).Position,1) + false">Conditional</animation> <!-- Do if no master widget -->
            <animation effect="slide" end="0,-600" time="200" condition="Integer.IsGreater(Container(4000).Position,2)">Conditional</animation>
            <animation effect="slide" end="0,-600" time="200" condition="Integer.IsGreater(Container(4000).Position,3)">Conditional</animation>
            <animation effect="slide" end="0,-600" time="200" condition="Integer.IsGreater(Container(4000).Position,4)">Conditional</animation>
            <animation effect="slide" end="0,-600" time="200" condition="Integer.IsGreater(Container(4000).Position,5)">Conditional</animation>

            <left>0</left>
            <top>0</top>
            <height>5000</height>
            <right>0</right>
            <usecontrolcoords>true</usecontrolcoords>
            <itemgap>0</itemgap>
            <visible>String.IsEqual(Container(9000).ListItem.Property(defaultID),foryou)</visible>

            <include>ContentChangeAnimation</include>

            <!-- Spacer to push widget rows down -->
            <control type="group">
                <height>1320</height> <!--548-->
            </control>

            <!-- Widget row 1-->
            <control type="group">
                <!-- <visible>false</visible> -->
                <visible>Integer.IsGreater(Container(4001).NumItems,0) | Container(4001).IsUpdating</visible>
                <animation effect="fade" start="100" end="0" time="200" condition="Integer.IsGreater(Container(4000).Position,1)">Conditional</animation>

                <left>0</left>
                <right>0</right>
                <top>0</top>
                <height>700</height>
                <include content="HomeWidgetLandscape">
                    <param name="WidgetLabel" value="hello" />
                    <param name="ShowLabels" value="true" />
                    <param name="ParentID" value="4001" />
                    <param name="ListID" value="4001" />
                    <param name="Content" value="special://skin/extras/playlists/recently_added_movies.xsp" />
                    <!-- <param name="Content" value="" /> -->
                    <param name="ContentType" value="videos" />
                    <param name="OnBack" value="SetFocus(4001,0,absolute)" />
                    <param name="OnUp" value="9001" />
                    <param name="OnDown" value="4002" />
                    <param name="GroupHeight" value="700" />
                </include>
            </control>

            <!-- Widget row 2-->
            <control type="group">
                <visible>Integer.IsGreater(Container(4002).NumItems,0) | Container(4002).IsUpdating</visible>
                <animation effect="fade" start="100" end="0" time="200" condition="[Integer.IsGreater(Container(4001).NumItems,0) + Integer.IsGreater(Container(4000).Position,2)] | 
                                                                                    [!Integer.IsGreater(Container(4001).NumItems,0) + Integer.IsGreater(Container(4000).Position,1)]">Conditional</animation>
                <!-- <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4001)">Conditional</animation> -->

                <left>0</left>
                <right>0</right>
                <top>0</top>
                <height>600</height>
                <include content="HomeWidgetLandscape">
                    <param name="WidgetLabel" value="Widget 2" />
                    <param name="ParentID" value="4001" />
                    <param name="ListID" value="4002" />
                    <param name="Content" value="special://skin/extras/playlists/recently_added_movies.xsp" />
                    <param name="ContentType" value="videos" />
                    <param name="OnBack" value="SetFocus(4002,0,absolute)" />
                    <param name="OnUp" value="4001" />
                    <param name="OnDown" value="4003" />
                    <param name="GroupHeight" value="600" />
                </include>
            </control>

            <!-- Widget row 3 -->
            <control type="group">
                <visible>Integer.IsGreater(Container(4003).NumItems,0) | Container(4003).IsUpdating</visible>
                <animation effect="fade" start="100" end="0" time="200" condition="[Integer.IsGreater(Container(4001).NumItems,0) + Integer.IsGreater(Container(4002).NumItems,0) + Integer.IsGreater(Container(4000).Position,3)] | 
                                                                                    [!Integer.IsGreater(Container(4001).NumItems,0) + !Integer.IsGreater(Container(4002).NumItems,0) + Integer.IsGreater(Container(4000).Position,1)] |
                                                                                    [!Integer.IsGreater(Container(4001).NumItems,0) + Integer.IsGreater(Container(4002).NumItems,0) + Integer.IsGreater(Container(4000).Position,2)] |
                                                                                    [Integer.IsGreater(Container(4001).NumItems,0) + !Integer.IsGreater(Container(4002).NumItems,0) + Integer.IsGreater(Container(4000).Position,2)]">Conditional</animation>
                <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4001)">Conditional</animation>
                <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4002)">Conditional</animation>

                <left>0</left>
                <right>0</right>
                <top>0</top>
                <height>600</height>
                <include content="HomeWidgetLandscape">
                    <param name="WidgetLabel" value="Widget 3" />
                    <param name="ParentID" value="4001" />
                    <param name="ListID" value="4003" />
                    <param name="Content" value="special://skin/extras/playlists/recently_added_movies.xsp" />
                    <param name="ContentType" value="videos" />
                    <param name="OnBack" value="SetFocus(4003,0,absolute)" />
                    <param name="OnUp" value="4002" />
                    <param name="OnDown" value="4004" />
                    <param name="GroupHeight" value="600" />
                </include>
            </control>

            <!-- Widget row 4-->
            <control type="group">
                <visible>Integer.IsGreater(Container(4004).NumItems,0) | Container(4004).IsUpdating</visible>
                <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4001)">Conditional</animation>
                <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4002)">Conditional</animation>
                <animation effect="slide" end="0,200" time="200" condition="Control.HasFocus(4003)">Conditional</animation>

                <left>0</left>
                <right>0</right>
                <top>0</top>
                <height>900</height>
                <include content="HomeWidgetLandscape">
                    <param name="WidgetLabel" value="Widget 4" />
                    <param name="ParentID" value="4001" />
                    <param name="ListID" value="4004" />
                    <param name="Content" value="special://skin/extras/playlists/recently_added_movies.xsp" />
                    <param name="ContentType" value="videos" />
                    <param name="OnBack" value="SetFocus(4004,0,absolute)" />
                    <param name="OnUp" value="4003" />
                    <param name="OnDown" value="noop" />
                    <param name="GroupHeight" value="600" />
                </include>
            </control>
        </control>
















