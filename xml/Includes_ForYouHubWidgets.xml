<?xml version="1.0" encoding="UTF-8"?>

<includes>

    <!-- For you hub widgets -->
    <include name="ForYouHubWidgets">
        <control type="group">
            <visible>String.IsEqual(Container(9005).ListItem.Property(id),foryou)</visible>
            <control type="image">
            <top>0</top>
            <right>-2</right>
            <width>3840</width>
            <height>1450</height>
            <fadetime>200</fadetime>
            <aspectratio scalediffuse="true" aligny="top" align="right">keep</aspectratio>
            <texture background="true" diffuse="masks/BackgroundCornerMask.png">$VAR[BackgroundImageWithoutFallback]</texture>
            <animation effect="fade" end="0" time="500">Hidden</animation>
            <animation effect="fade" start="0" end="100" time="1200">Visible</animation>
        </control>

            <!-- Include main info -->
            <include content="MainInfoView">
                <param name="ID" value="4000" />
            </include>

            <control type="image">
                <left>220</left>
                <top>635</top>
                <width>1000</width>
                <height>388</height>
                <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
            </control>

            <!-- <control type="textbox" id="2010">
                <left>220</left>
                <right>300</right>
                <top>550</top>
                <height>540</height>
                <width>950</width>
                <align>left</align>
                <aligny>center</aligny>
                <font>EpisodePlot</font>
                <textcolor>TextBright</textcolor>
                <shadowcolor>ff000000</shadowcolor>
                <label>$VAR[Plot]</label>
                <visible>!Container(2010).HasNext</visible>
            </control> -->

            <control type="fixedlist" id="4000">
                <top>1200</top>
                <left>0</left>
                <right>0</right>
                <height>740</height>

                <onleft>noop</onleft>
                <onright>noop</onright>
                <onup>9005</onup>
                <ondown>noop</ondown>
                <onback>SetFocus(4000,0,absolute)</onback>

                <pagecontrol>60</pagecontrol>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <focusposition>0</focusposition>
                <movement>3</movement>
                <viewtype label="Landscape Flow">icon</viewtype>

                <!-- Movies / TV Shows / Seasons / Sets / Episdoes -->
                <itemlayout width="866" height="740">
                    <control type="group">
                        <left>182</left>
                        <include content="LandscapeLayout">
                            <param name="LabelColor" value="TextDim" />
                            <param name="Focused" value="false" />
                            <param name="ListID" value="4000" />
                            <param name="ShowProgress" value="true" />
                        </include>
                    </control>
                </itemlayout>

                <focusedlayout width="866" height="740">
                    <control type="group">
                        <visible>Control.HasFocus(4000)</visible>
                        <left>182</left>
                        <include content="LandscapeLayout">
                            <param name="LabelColor" value="TextBright" />
                            <param name="Focused" value="true" />
                            <param name="ListID" value="4000" />
                            <param name="ShowProgress" value="true" />
                        </include>
                    </control>
                    <control type="group">
                        <visible>!Control.HasFocus(4000)</visible>
                        <left>182</left>
                        <include content="LandscapeLayout">
                            <param name="LabelColor" value="TextDim" />
                            <param name="Focused" value="true" />
                            <param name="ListID" value="4000" />
                            <param name="ShowProgress" value="true" />
                        </include>
                    </control>
                </focusedlayout>

                <content/>
                <content type="videos">plugin://script.embuary.helper/?info=getinprogress&type=movie</content>
                <content type="videos">plugin://script.embuary.helper/?info=getnextup</content>
            </control>
        </control>
    </include>

</includes>