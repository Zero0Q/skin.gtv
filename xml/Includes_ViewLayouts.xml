                    </control>
                    <!-- Set info -->
                    <control type="image">
                        <visible>String.IsEqual(Container($PARAM[ID]).ListItem.dbtype,set)</visible>
                        <left>0</left>
                        <top>54</top>
                        <width>60</width>
                        <height>60</height>
                        <aspectratio>keep</aspectratio>
                        <texture background="true">general/movie.png</texture>
                    </control>
                    <control type="button">
                        <visible>String.IsEqual(Container($PARAM[ID]).ListItem.dbtype,set)</visible>
