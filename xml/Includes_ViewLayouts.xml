                            <right>300</right>
                            <top>710</top>
                            <height>250</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>LibraryMainTitleBig</font>
                            <textcolor>TextBright</textcolor>
                            <scrollsuffix>•</scrollsuffix>
