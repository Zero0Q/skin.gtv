            <control type="group">
                <animation type="Focus" reversible="false">
                    <effect type="zoom" end="100" time="50" tween="sine" center="auto" />
                </animation>
                <!-- Main Title Group -->
                <control type="group">
                    <control type="textbox">
                        <left>220</left>
                        <right>300</right>
                        <top>444</top>
                        <height>250</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>LibrarySectionHeader</font>
                        <textcolor>TextDim</textcolor>
