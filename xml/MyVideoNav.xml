<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload condition="Container.Content(genres) | Container.Content(studios) | Container.Content(years) | Container.Content(countries)">SetFocus(531)</onload>

    <defaultcontrol always="true">500</defaultcontrol>
    <views>50,500,501,502,503,510,520,530</views>

    <controls>
        <control type="group">
            <top>0</top>
            <left>0</left>

            <!-- Fake image for color grab -->
            <control type="image" id="110000">
                <visible>!Container.Content(addons) + !String.Contains(Container.FolderPath,plugin://)</visible>
                <left>-1000</left>
                <top>-1000</top>
                <width>10</width>
                <height>10</height>
                <texture background="true">$VAR[LandscapeImageVar]</texture>
            </control>

            <include>Background</include>

            <control type="group">
                <!-- Include all views -->
                <control type="group">
                    <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
                    <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>

                    <include>View_50_List</include>
                    <include>View_500_LandscapeFlow</include>
                    <include>View_501_PosterFlow</include>
                    <include>View_502_PosterGrid</include>
                    <include>View_503_LandscapeGrid</include>
                    <include>View_530_Category</include>
                </control>

                <!-- Include menus -->
                <include>LibraryMenu</include>
            </control>

        </control>
    </controls>
</window>